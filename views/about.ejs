<section class="max-w-5xl mx-auto px-6 py-16 space-y-12">
  <div class="space-y-8">
    <div class="text-sm uppercase tracking-[0.3em] text-indigo-400">Louie Bacaj</div>
    <div class="space-y-4 text-center lg:text-left lg:space-y-6 max-w-3xl mx-auto lg:mx-0">
      <h1 class="text-3xl md:text-4xl font-bold text-white">About me</h1>
      <p class="text-sm text-slate-400 italic">
        This is the long version—updated January 2025. For the quick intro, head back to the
        <a class="underline hover:text-white" href="/">home page</a>.
      </p>
    </div>
    <div class="prose prose-invert mx-auto max-w-none text-left leading-relaxed text-slate-100 lg:mx-0">
      <img
        src="<%= heroImage %>"
        alt="<%= heroImageAlt %>"
        class="mx-auto mb-6 w-full max-w-[14rem] rounded-3xl border border-slate-800/70 shadow-xl sm:max-w-[18rem] lg:float-right lg:ml-10 lg:mb-4 lg:max-w-[20rem]"
        loading="lazy"
      />
      <%- aboutHtml %>
    </div>
  </div>

  <div class="space-y-4 border-t border-slate-800/60 pt-10">
    <h2 class="text-2xl font-semibold text-white">Connect with me</h2>
    <p class="text-sm text-slate-300">
      Want to collaborate or have a podcast or newsletter you think I'd be a fit for? Email me at
      <a class="text-indigo-300 hover:text-white" href="mailto:louie@louiebacaj.com">louie@louiebacaj.com</a>.
    </p>
    <p class="text-sm text-slate-300">I read every message even if I can't reply to them all.</p>
  </div>

  <div class="space-y-8 border-t border-slate-800/60 pt-10">
    <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
      <div class="space-y-2 text-center md:text-left">
        <h2 class="text-2xl font-semibold text-white">How I might be able to help you</h2>
        <p class="text-sm text-slate-400">A few places where I'm building, teaching, and sharing.</p>
      </div>
      <% if (Array.isArray(apps) && apps.length) { %>
        <a class="text-sm font-semibold text-indigo-300 hover:text-white" href="/apps">Explore more apps →</a>
      <% } %>
    </div>
    <% if (Array.isArray(apps) && apps.length) { %>
      <div class="grid gap-6 md:grid-cols-3">
        <% apps.forEach((app) => { %>
          <article class="flex h-full flex-col overflow-hidden rounded-2xl border border-slate-800/70 bg-slate-900/40">
            <% if (app.image_url) { %>
              <img src="<%= app.image_url %>" alt="<%= app.title %>" class="h-40 w-full object-cover" loading="lazy" />
            <% } %>
            <div class="flex flex-1 flex-col gap-3 p-6">
              <h3 class="text-lg font-semibold text-white"><%= app.title %></h3>
              <% if (app.blurb) { %>
                <p class="text-sm text-slate-300 flex-1"><%= app.blurb %></p>
              <% } else if (app.description) { %>
                <p class="text-sm text-slate-300 flex-1"><%= app.description %></p>
              <% } else { %>
                <p class="text-sm text-slate-500 flex-1">New project coming soon.</p>
              <% } %>
              <div class="flex flex-wrap gap-2 text-xs text-slate-400">
                <% if (app.tags) { %>
                  <% app.tags.split(',').forEach((tag) => { %>
                    <span class="rounded-full bg-slate-800/80 px-3 py-1"><%= tag.trim() %></span>
                  <% }) %>
                <% } %>
              </div>
            </div>
            <% if (app.source_url) { %>
              <a
                class="inline-flex items-center justify-between gap-2 px-6 py-4 border-t border-slate-800/60 text-sm font-semibold text-indigo-300 hover:text-white"
                href="<%= app.source_url %>"
                target="_blank"
                rel="noopener noreferrer"
              >
                Visit app →
              </a>
            <% } %>
          </article>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-sm text-slate-400">Add your apps from the admin dashboard to feature them here.</p>
    <% } %>
  </div>
</section>
